{
    "name": "opine/build",
    "type": "library",
    "description": "Build system for constructing and maintaining Opine projects",
    "keywords": ["Build"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"             : ">=5.5.0",
        "opine/interfaces": "1.0.0",
        "opine/cache"     : "2.0.2",
        "opine/field"     : "dev-master",
        "opine/pubsub"    : "dev-master",
        "opine/collection": "dev-master",
        "opine/helper"    : "dev-master",
        "opine/config"    : "3.0.0",
        "opine/form"      : "dev-master",
        "opine/bundle"    : "1.9.0",
        "opine/search"    : "dev-master",
        "opine/route"     : "3.0.1",
        "opine/container" : "2.0.2",
        "opine/handlebars": "dev-master",
        "opine/language"  : "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.32"
    },
    "autoload": {
        "psr-4": {
            "Opine\\Build\\": "src/"
        }
    }
}